<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.timertest.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15sp"
            android:id="@+id/tv_time"
            android:text="timer period : "
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />
        <EditText

            android:id="@+id/et_time"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content" />
        <TextView
            android:text="minutes"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="15sp"
            android:id="@+id/tv_message"
            android:text="message : "
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />
        <EditText

            android:id="@+id/et_message"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content" />
        <TextView
            android:text="string"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <Button
        android:id="@+id/btn_set"
        android:text="set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_getInternalAddress"
        android:text="getInternalAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_getHueApiUsername"
        android:text = "getHueApiUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="getLights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_getLights"/>

    <Button
        android:id="@+id/btn_turnOffRestroom"
        android:text="turnOffRestroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_turnOnRestroom"
        android:text="turnOnnRestroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
